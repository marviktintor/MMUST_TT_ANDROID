<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:background="#FFF"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="20dp" >

        <TextView
            android:id="@+id/notification_ui_textView_sent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            
            android:text="Mon 25-1-2015"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/notification_ui_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/notification_ui_textView_sent_time"
          
            android:text="End of Semester TimeTable"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/notification_ui_textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/notification_ui_textView_title"
            android:layout_below="@+id/notification_ui_textView_title"
            android:text="Timetable Released"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/notification_ui_textView_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notification_ui_textView_sent_time"
            android:layout_alignLeft="@+id/notification_ui_textView_message"
            android:text="Sender"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</LinearLayout>