<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/classes_ui_textView_class_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="7:00 - 1100"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/classes_ui_textView_class_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/classes_ui_textView_class_time"
            android:text="Event Driven Programming"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/classes_ui_textView_class_lec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/classes_ui_textView_class_course"
            android:layout_below="@+id/classes_ui_textView_class_course"
            android:text="Mr. Angulu"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/classes_ui_textView_class_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/classes_ui_textView_class_lec"
            android:layout_alignBottom="@+id/classes_ui_textView_class_lec"
            android:layout_alignRight="@+id/classes_ui_textView_class_time"
            android:text="Lbb 016"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</LinearLayout>