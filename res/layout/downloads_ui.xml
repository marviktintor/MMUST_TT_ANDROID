<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
       android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/downloads_ui_textView_fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="CSS Tutorials"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/downloads_ui_textView_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/downloads_ui_textView_fileName"
            android:layout_below="@+id/downloads_ui_textView_fileName"
            android:text="CSC *** Web Programming"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:src="@drawable/ic_enter_category_normal" />

    </RelativeLayout>

</LinearLayout>