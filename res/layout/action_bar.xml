<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF" >

    <ImageView
        android:id="@+id/action_bar_imageView_drawer_handle"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:src="@drawable/action_bar_icon_sliding_menu" />

    <TextView
        android:id="@+id/action_bar_textView_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/action_bar_imageView_drawer_handle"
        android:drawableLeft="@drawable/icon_home"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="Home"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#79bbff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" android:padding="5dp"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/action_bar_progressBar_syncing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/action_bar_imageView_sync_result"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/indicator_input_error" />

        <ImageView
            android:id="@+id/action_bar_imageView_preferences"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@android:drawable/ic_menu_preferences" />

        <ImageView
            android:id="@+id/action_bar_imageView_notifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_notification" />
    </LinearLayout>

</RelativeLayout>